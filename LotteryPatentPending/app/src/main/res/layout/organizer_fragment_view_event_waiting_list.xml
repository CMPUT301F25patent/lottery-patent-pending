<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".OrganizerViewEventsListFragment"
    android:id="@+id/organizer_events_root">

    <!-- Lottery Sample button at bottom -->
    <LinearLayout
        android:id="@+id/lottery_sample_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:src="@drawable/filter_solid_full"
            android:id="@+id/filterDropDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lottery_sample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sample Attendants"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:backgroundTint="@color/light_blue_dark"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/organizer_event_waiting_list_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel Entrants"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:backgroundTint="@color/light_blue_dark"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>


    </LinearLayout>

    <!-- List fills rest of space -->
    <ListView
        android:id="@+id/waitingList"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/bg_list_rounded"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:clipToPadding="false"

        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"

        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical"
        android:scrollbarTrackVertical="@android:color/transparent"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"

        app:layout_constraintTop_toBottomOf="@id/lottery_sample_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

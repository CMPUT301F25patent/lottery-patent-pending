<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <!-- Scrollable Content Card -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_margin="16dp"

        android:background="@drawable/bg_list_rounded"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical"
        android:scrollbarTrackVertical="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/notiBtn" />

            <!-- Notifications button -->
            <ImageButton
                android:id="@+id/notiBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:src="@drawable/ic_notification_white_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Event Poster -->
            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintTop_toBottomOf="@id/eventTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Event Description Header -->
            <TextView
                android:id="@+id/descHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                android:paddingTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/eventImage"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Long Description Text -->
            <TextView
                android:id="@+id/eventLongDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:text="Learn to swim in a fun and supportive environment! This 6-week class focuses on water safety, floating, and basic stroke techniques..."
                app:layout_constraintTop_toBottomOf="@id/descHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ===== ORGANIZER QUICK ACTIONS (WL / MAP) ===== -->

            <LinearLayout
                android:id="@+id/organizerActionsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/eventLongDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/viewWLBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Waiting List" />

                <Button
                    android:id="@+id/viewMapBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Map" />
            </LinearLayout>

            <!-- ================= LOCATION ================= -->

            <TextView
                android:id="@+id/locationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Location"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/organizerActionsRow"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="TBD"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/locationHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= EVENT DATE ================= -->

            <TextView
                android:id="@+id/eventDateHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Event Date"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/location"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="TBD"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= REGISTRATION START ================= -->

            <TextView
                android:id="@+id/regStartHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Registration Start"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/eventDate"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/regStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="TBD"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/regStartHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= REGISTRATION END ================= -->

            <TextView
                android:id="@+id/regEndHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Registration End"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/regStart"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/regEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="TBD"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/regEndHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= EVENT CAPACITY ================= -->

            <TextView
                android:id="@+id/maxEntrantsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Event Capacity"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/regEnd"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/maxEntrants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0/0"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/maxEntrantsHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= WAITING LIST CAP ================= -->

            <TextView
                android:id="@+id/waitingListHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Waiting List Capacity"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/maxEntrants"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/waitingListCap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="N/A"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/waitingListHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= TAG ================= -->

            <TextView
                android:id="@+id/tagHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tag"
                android:textColor="#7FC9FF"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/waitingListCap"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="General"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tagHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Divider -->
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#777777"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Event Settings Header -->
            <TextView
                android:id="@+id/eventSettingsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Event Settings"
                android:textColor="#7FC9FF"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Geo-location Toggle Row -->
            <LinearLayout
                android:id="@+id/geoToggleRow"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/eventSettingsHeader"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Geo-location for this event"
                    android:textColor="#FFFFFF"
                    android:paddingEnd="8dp" />

                <CheckBox
                    android:id="@+id/geoCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#7FC9FF" />
            </LinearLayout>

            <!-- QR Button -->
            <Button
                android:id="@+id/qrButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate QR Code"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/geoToggleRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- QR Image Placeholder -->
            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_foreground"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/qrButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

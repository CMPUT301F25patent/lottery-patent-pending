<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendeeProfileFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/attendeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:ems="15"
        android:inputType="text"
        android:text="Name"
        android:gravity="center"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/attendeeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textEmailAddress"
        android:text="Name"
        android:gravity="center"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/attendeePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:text="Name"
        android:inputType="phone"
        android:gravity="center"
        android:layout_gravity="center"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:gravity="center"
        android:layout_gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileSaveBtn"
        android:textColor="@color/black"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white_grey"
        android:layout_gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delete Account"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/light_red"
        android:layout_gravity="center"/>
</LinearLayout>